<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:office="urn:oasis:names:tc:opendocument:xmlns:office:1.0"
  xmlns:style="urn:oasis:names:tc:opendocument:xmlns:style:1.0"
  xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0"
  xmlns:table="urn:oasis:names:tc:opendocument:xmlns:table:1.0"
  xmlns:draw="urn:oasis:names:tc:opendocument:xmlns:drawing:1.0"
  xmlns:fo="urn:oasis:names:tc:opendocument:xmlns:xsl-fo-compatible:1.0"
  xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:meta="urn:oasis:names:tc:opendocument:xmlns:meta:1.0"
  xmlns:number="urn:oasis:names:tc:opendocument:xmlns:datastyle:1.0"
  xmlns:svg="urn:oasis:names:tc:opendocument:xmlns:svg-compatible:1.0"
  xmlns:chart="urn:oasis:names:tc:opendocument:xmlns:chart:1.0"
  xmlns:dr3d="urn:oasis:names:tc:opendocument:xmlns:dr3d:1.0"
  xmlns:math="http://www.w3.org/1998/Math/MathML"
  xmlns:form="urn:oasis:names:tc:opendocument:xmlns:form:1.0"
  xmlns:script="urn:oasis:names:tc:opendocument:xmlns:script:1.0"
  xmlns:ooo="http://openoffice.org/2004/office" xmlns:ooow="http://openoffice.org/2004/writer"
  xmlns:oooc="http://openoffice.org/2004/calc" xmlns:dom="http://www.w3.org/2001/xml-events"
  xmlns:xforms="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <utfx:stylesheet src="ooo2xhtml.xsl"/>
  <utfx:test>
    <utfx:name>Soft return in a link</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:p text:style-name="p">
          <text:a xlink:type="simple" xlink:href="http://www.google.com.au/search?q">http://www.google.com.au/search?q</text:a>
          <text:a xlink:type="simple"
            xlink:href="http://www.google.com.au/search?q=ICE&amp;start=0&amp;start=0&amp;ie=utf-8&amp;oe=utf-8&amp;client=firefox-a&amp;rls=org.mozilla:en-US:official"
            ><text:line-break/>=ICE&amp;start=0&amp;start=0&amp;ie=<text:line-break/>utf-8&amp;oe=utf-8&amp;client=<text:line-break/>firefox-a&amp;rls=org.mozilla:en-US:official</text:a>
        </text:p>
      </utfx:source>
      <utfx:expected validate="no">
        <p>
          <a href="http://www.google.com.au/search?q=ICE&amp;start=0&amp;start=0&amp;ie=utf-8&amp;oe=utf-8&amp;client=firefox-a&amp;rls=org.mozilla:en-US:official">http://www.google.com.au/search?q<br/>=ICE&amp;start=0&amp;start=0&amp;ie=<br/>utf-8&amp;oe=utf-8&amp;client=<br/>firefox-a&amp;rls=org.mozilla:en-US:official</a>
        </p>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  <utfx:test>
    <utfx:name>Simple link</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:a xlink:type="simple"
          xlink:href="http://education.qld.gov.au/public_media/reports/curriculum-framework/html/p3_pp.html"
          office:target-frame-name="_blank" xlink:show="new">Education Queensland website</text:a>
      </utfx:source>
      <utfx:expected validate="no">
        <a href="http://education.qld.gov.au/public_media/reports/curriculum-framework/html/p3_pp.html"
          target="_blank">Education Queensland website</a>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  <utfx:test>
    <utfx:name>link with split text but matching hrefs</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:a xlink:type="simple" xlink:href="http://ifets.ieee.org/periodical/"
          office:target-frame-name="_blank" xlink:show="new">Educational Technology and</text:a>
        <text:a xlink:type="simple" xlink:href="http://ifets.ieee.org/periodical/"
          office:target-frame-name="_blank" xlink:show="new">
          <text:span text:style-name="T7">, </text:span>
        </text:a>
        <text:a xlink:type="simple" xlink:href="http://ifets.ieee.org/periodical/"
          office:target-frame-name="_blank" xlink:show="new">
          <text:span text:style-name="T8">Society</text:span>
        </text:a>
      </utfx:source>
      <utfx:expected validate="no">
        <a href="http://ifets.ieee.org/periodical/" target="_blank">Educational Technology and<span
        class="T7">, </span><span class="T8">Society</span></a>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  <utfx:test>
    <utfx:name>Proceding links with matching hrefs</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:a xlink:type="simple"
          xlink:href="http://education.qld.gov.au/public_media/reports/curriculum-framework/html/p3_pp.html"
          office:target-frame-name="_blank" xlink:show="new">Education Queensland website</text:a>
        <text:a xlink:type="simple"
          xlink:href="http://education.qld.gov.au/public_media/reports/curriculum-framework/html/p3_pp.html"
          office:target-frame-name="_blank" xlink:show="new">
          <text:span text:style-name="T5">.</text:span>
        </text:a>
      </utfx:source>
      <utfx:expected validate="no">
        <a
        href="http://education.qld.gov.au/public_media/reports/curriculum-framework/html/p3_pp.html"
          target="_blank">Education Queensland website<span class="T5">.</span></a>
       </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  <utfx:test>
    <utfx:name>Multiple links with spaces between</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:a xlink:type="simple"
          xlink:href="http://ice.usq.edu.au"
          office:target-frame-name="_blank" xlink:show="new">ICE</text:a>
        <text:span text:style-name="T5">, </text:span>
        <text:a xlink:type="simple"
          xlink:href="http://ice.usq.edu.au/wiki"
          office:target-frame-name="_blank" xlink:show="new">ICE wiki</text:a>
      </utfx:source>
      <utfx:expected validate="no">
        <a href="http://ice.usq.edu.au"
          target="_blank">ICE</a>
          <span class="T5">, </span>
        <a href="http://ice.usq.edu.au/wiki"
          target="_blank">ICE wiki</a>        
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Soft returns in an OS X Word link</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:p text:style-name="p">
          <text:a xlink:type="simple"
            xlink:href="http://localhost:8000/%0Bpackages/courseware/dec/sds/2006/s1/%0Bresources/mac_docs/misc_items.htm">
            http://localhost:8000/<text:line-break/>packages/courseware/dec/sds/2006/s1/<text:line-break/>resources/mac_docs/misc_items.htm
          </text:a>
        </text:p>
      </utfx:source>
      <utfx:expected validate="no">
        <p>
          <a href="http://localhost:8000/packages/courseware/dec/sds/2006/s1/resources/mac_docs/misc_items.htm">
            http://localhost:8000/<br/>packages/courseware/dec/sds/2006/s1/<br/>resources/mac_docs/misc_items.htm
          </a>  
        </p>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>matching links in same parent element</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
      <text:p text:style-name="p">
        text <text:a xlink:type="simple" xlink:href="http://www.dest.gov.au#merri">MERRI</text:a> text <text:a xlink:type="simple" xlink:href="http://www.dest.gov.au#frodo">FRODO</text:a> text</text:p>
      </utfx:source>
      <utfx:expected validate="no">
        <p>text <a href="http://www.dest.gov.au#merri">MERRI</a> text <a href="http://www.dest.gov.au#frodo">FRODO</a> text</p>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
 
  <utfx:test>
    <utfx:name>matching links in same parent element 2</utfx:name>
    <utfx:assert-equal>
      <utfx:source validate="no">
        <text:p text:style-name="p">
          <text:a xlink:type="simple" xlink:href="http://www.dest.gov.au#merri">MERRI</text:a>. <text:a xlink:type="simple" xlink:href="http://www.dest.gov.au#frodo">FRODO</text:a>.</text:p>
      </utfx:source>
      <utfx:expected validate="no">
        <p><a href="http://www.dest.gov.au#merri">MERRI</a>. <a href="http://www.dest.gov.au#frodo">FRODO</a>.</p>
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
