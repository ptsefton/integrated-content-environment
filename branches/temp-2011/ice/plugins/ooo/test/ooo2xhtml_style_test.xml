      <utfx:stylesheet src="ooo2xhtml.xsl"/>
      <utfx:test>
            <utfx:name>Style Families dl2 </utfx:name>
            <utfx:assert-equal>
                  <utfx:source validate="no">
                        <get-family>dd5</get-family>
                        <get-family>dt1</get-family>
                        <get-family>bq2</get-family>
                        <get-family>li1b</get-family>
                        <get-family>li1p</get-family>
                        <get-family>pre3</get-family>
                        <get-family>h5</get-family>
                        <get-family>p-center</get-family>
                        <get-family/>
                  </utfx:source>
                  <utfx:expected validate="no">
                        <f>dd</f>
                        <f>dt</f>
                        <f>bq</f>
                        <f>li</f>
                        <f>li</f>
                        <f>pre</f>
                        <f>h</f>
                        <f>p</f>
                        <f>p</f>
                  </utfx:expected>
            </utfx:assert-equal>
      </utfx:test>
      <utfx:test>
