      <utfx:test>
            <utfx:name>EndNote Hanging Indent with Italics</utfx:name>
            <utfx:call-template name="root-test"/>
            <utfx:assert-equal>
                  <utfx:source validate="no">
                        <office:automatic-styles>
                              <style:style style:name="P2" style:family="paragraph" style:parent-style-name="p">
                                    <style:paragraph-properties fo:margin-left="1.27cm" fo:margin-right="0cm"
                                          fo:margin-top="0cm" fo:margin-bottom="0cm" fo:text-indent="-1.27cm"
                                          style:auto-text-indent="false"/>
                              </style:style>
                              <style:style style:name="T1" style:family="text">
                                    <style:text-properties fo:font-style="italic" style:font-style-asian="italic"/>
                              </style:style>
                        </office:automatic-styles>
                    <office:body>
                      <office:text>
                         <text:p text:style-name="P2">USQ. (2005). ICE Logo (1 ed., pp. <text:span text:style-name="T1">Integrated Content Environment</text:span>). Toowoomba: USQ.</text:p>
                      </office:text>
                     </office:body>
                  </utfx:source>
                  <utfx:expected validate="no">
                        <html><head>
                                    <title>Untitled</title>
                              <style type="text/css">table {border-spacing: 0;empty-cells: show;} p.P2 {margin-bottom:0cm; margin-left:1.27cm; margin-right:0cm; margin-top:0cm; text-indent:-1.27cm; } span.T1 {font-style:italic; }</style>
                              </head>
                              <body><p class="P2">USQ. (2005). ICE Logo (1 ed., pp.<span class="T1">Integrated Content Environment</span>). Toowoomba: USQ.</p></body>
                         </html>
                         <p class="P2">USQ. (2005). ICE Logo (1 ed., pp.<span class="T1">Integrated Content Environment</span>). Toowoomba: USQ.</p>
                  </utfx:expected>
            </utfx:assert-equal>
      </utfx:test>
      <utfx:test>
            <utfx:name>EndNote Hanging Indent with Bold</utfx:name>
            <utfx:call-template name="root-test"/>
            <utfx:assert-equal>
                  <utfx:source validate="no">
                        <office:automatic-styles>
                              <style:style style:name="P2" style:family="paragraph" style:parent-style-name="p">
                                    <style:paragraph-properties fo:margin-left="1.27cm" fo:margin-right="0cm"
                                          fo:margin-top="0cm" fo:margin-bottom="0cm" fo:text-indent="-1.27cm"
                                          style:auto-text-indent="false"/>
                              </style:style>
                              <style:style style:name="T1" style:family="text">
                                    <style:text-properties fo:font-weight="bold" style:font-weight-asian="bold" style:font-weight-complex="bold"/>
                              </style:style>
                        </office:automatic-styles>
                        <office:body>
                              <office:text>
                                    <text:p text:style-name="P2">USQ. (2005). ICE Logo (1 ed., pp. <text:span text:style-name="T1">Integrated Content Environment</text:span>). Toowoomba: USQ.</text:p>
                              </office:text>
                        </office:body>
                  </utfx:source>
                  <utfx:expected validate="no">
                        <html><head>
                              <title>Untitled</title>
                              <style type="text/css">table {border-spacing: 0;empty-cells: show;} p.P2 {margin-bottom:0cm; margin-left:1.27cm; margin-right:0cm; margin-top:0cm; text-indent:-1.27cm; } span.T1 {font-weight:bold; }</style>
                        </head>
                              <body><p class="P2">USQ. (2005). ICE Logo (1 ed., pp.<span class="T1">Integrated Content Environment</span>). Toowoomba: USQ.</p></body>
                        </html>
                        <p class="P2">USQ. (2005). ICE Logo (1 ed., pp.<span class="T1">Integrated Content Environment</span>). Toowoomba: USQ.</p>
                  </utfx:expected>
            </utfx:assert-equal>
      </utfx:test>
