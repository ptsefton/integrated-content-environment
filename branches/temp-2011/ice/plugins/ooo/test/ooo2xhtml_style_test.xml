                        <l>2</l>
                        <l>1</l>
                        <l>1</l>
                        <l>3</l>
                        <l>0</l>
                        <l>0</l>
                        <l>0</l>
                  </utfx:expected>
            </utfx:assert-equal>
      </utfx:test>
      <utfx:test>
