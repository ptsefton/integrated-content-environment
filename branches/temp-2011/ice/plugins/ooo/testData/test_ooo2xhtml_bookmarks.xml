<?xml version="1.0"?>
<testData xmlns:office="urn:oasis:names:tc:opendocument:xmlns:office:1.0" xmlns:style="urn:oasis:names:tc:opendocument:xmlns:style:1.0" xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0" xmlns:table="urn:oasis:names:tc:opendocument:xmlns:table:1.0" xmlns:draw="urn:oasis:names:tc:opendocument:xmlns:drawing:1.0" xmlns:fo="urn:oasis:names:tc:opendocument:xmlns:xsl-fo-compatible:1.0" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:meta="urn:oasis:names:tc:opendocument:xmlns:meta:1.0" xmlns:number="urn:oasis:names:tc:opendocument:xmlns:datastyle:1.0" xmlns:svg="urn:oasis:names:tc:opendocument:xmlns:svg-compatible:1.0" xmlns:chart="urn:oasis:names:tc:opendocument:xmlns:chart:1.0" xmlns:dr3d="urn:oasis:names:tc:opendocument:xmlns:dr3d:1.0" xmlns:math="http://www.w3.org/1998/Math/MathML" xmlns:form="urn:oasis:names:tc:opendocument:xmlns:form:1.0" xmlns:script="urn:oasis:names:tc:opendocument:xmlns:script:1.0" xmlns:ooo="http://openoffice.org/2004/office" xmlns:ooow="http://openoffice.org/2004/writer" xmlns:oooc="http://openoffice.org/2004/calc" xmlns:dom="http://www.w3.org/2001/xml-events" xmlns:xforms="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" office:version="1.0">
    <!-- xmlns="http://www.w3.org/1999/xhtml" -->
    
  <tests>

    <test name="Anchor test" normalize-white-spaces="true">
	<source>
	  <office:document-content><office:body>
		<office:text>
			<text:p text:style-name="p">Self<text:bookmark text:name="self"/></text:p>
	  	</office:text>
	  </office:body></office:document-content>
	</source>
	<expected match="/html:html/html:body">
	  <body>
		<p>Self<a name="self"><!--self--></a></p>
      	  </body>
	</expected>
    </test>

    <test name="Basic test one" normalize-white-spaces="true">
	<source>
	  <office:document-content><office:body>
		<office:text>
<text:p text:style-name="p">This is just a quick test document.</text:p>
<text:p text:style-name="p">Self
	<text:bookmark text:name="self"/>
</text:p>
<text:p text:style-name="p">Link to 
	<text:a xlink:type="simple" xlink:href="http://localhost:8000/packages/tests/testtwo.htm">TestTwo</text:a>.
</text:p>
<text:p text:style-name="p">Link to 
	<text:a xlink:type="simple" xlink:href="http://localhost:8000/packages/tests/testtwo.htm#bookmark1">TestTwo#Bookmark1	</text:a>.
</text:p>
<text:p text:style-name="p">Link to 
	<text:a xlink:type="simple" xlink:href="#self">self</text:a>.
</text:p>
<text:p text:style-name="p">Link to 
	<text:a xlink:type="simple" xlink:href="http://localhost:8000/packages/tests/testthree.htm">TestThree</text:a>.
</text:p>
	  	</office:text>
	  </office:body></office:document-content>
	</source>
	<expected match="/html:html/html:body">
	  <body>
		<p>This is just a quick test document.</p>
		<p>Self <a name="self"><!--self--></a></p>
		<p>Link to <a href="http://localhost:8000/packages/tests/testtwo.htm">TestTwo</a>. </p>
		<p>Link to <a href="http://localhost:8000/packages/tests/testtwo.htm#bookmark1">TestTwo#Bookmark1 </a>. </p>
		<p>Link to <a href="#self">self</a>. </p>
		<p>Link to <a href="http://localhost:8000/packages/tests/testthree.htm">TestThree</a>. </p>
    	  </body>
	</expected>
    </test>

    <test name="Basic test two" normalize-white-spaces="true">
	<source>
	  <office:document-content><office:body>
		<office:text>
<text:p text:style-name="P5">This is just a simple bookmark test document</text:p>
<text:p text:style-name="p">This is a <text:a xlink:type="simple" xlink:href="#bookmark1">link</text:a> to a bookmark1.</text:p>
<text:p text:style-name="p">This is <text:bookmark-start text:name="bookmark2"/>bookmark two<text:bookmark-end text:name="bookmark2"/>.</text:p>
<text:p text:style-name="p"/>
<text:p text:style-name="p">One</text:p>
<text:p text:style-name="p">two</text:p>
<text:p text:style-name="p">three</text:p>
<text:p text:style-name="p"/>
<text:p text:style-name="p">This is the <text:bookmark-start text:name="bookmark1"/>bookmark one<text:bookmark-end text:name="bookmark1"/>.</text:p>
<text:p text:style-name="p">This is a <text:a xlink:type="simple" xlink:href="#bookmark2">link</text:a> to bookmark two.</text:p>
<text:p text:style-name="p">The End.</text:p>
	  	</office:text>
	  </office:body></office:document-content>
	</source>
	<expected match="/html:html/html:body">
	  <body>
		<p>This is just a simple bookmark test document</p>
		<p>This is a <a href="#bookmark1">link</a> to a bookmark1.</p>
		<p>This is <a name="bookmark2"><!--bookmark2--></a>bookmark two.</p>
		<p></p>
		<p>One</p>
		<p>two</p>
		<p>three</p>
		<p></p>
		<p>This is the <a name="bookmark1"><!--bookmark1--></a>bookmark one.</p>
		<p>This is a <a href="#bookmark2">link</a> to bookmark two.</p>
		<p>The End.</p>
    	  </body>
	</expected>
    </test>

  </tests>
</testData>
